{
  "ConnectionStrings": {
    "DefaultConnection": "Server=BORAN;Database=LibraryDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Jwt": {
    "Issuer": "http://localhost:7208",
    "Audience": "http://localhost:7208",
    "SigPrivatePath": "Keys/jwt-sig-private.pem",
    "SigPublicPath": "Keys/jwt-sig-public.pem",
    "EncPrivatePath": "Keys/jwt-enc-private.pem",
    "EncPublicPath": "Keys/jwt-enc-public.pem",
    "SigKid": "sig-2025-08",
    "EncKid": "enc-2025-08",
    "AccessMinutes": 10,
    "RefreshDays": 14,
    "AccessCookieName": "access",
    "RefreshCookieName": "refresh"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "LibraryApp": "Information"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "LibraryApp": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/app-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*"
}
